{% if value|length %}
    <div class="comments">
        {% for comment in value %}
            <div class="comment">
                <div class="info">
                    <span class="created-at">{{ comment.createdAt|app_timezone|app_datetime }}</span>
                    <span class="user">
                    {% include 'default/crud/fields/user.html.twig' with { value: comment.user } %}
                </span>
                </div>
                <div class="text">{{ comment.text }}</div>
            </div>
        {% endfor %}
    </div>
{% endif %}
